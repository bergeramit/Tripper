<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bed8f1"
    tools:context="com.example.user.tripper.Main">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="235dp"
            android:layout_height="244dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/world"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal|top"
                android:background="@drawable/logo"
                android:layout_marginTop="50dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:id="@+id/pr"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Error"
                android:id="@+id/mes"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:textColor="#ca2f37"
                android:textSize="15dp" />

            <EditText
                android:layout_width="255dp"
                android:layout_height="fill_parent"
                android:id="@+id/editText"
                android:background="#ffffff"
                android:hint="tell us about your vacation..."
                android:textAlignment="center"
                android:typeface="serif"
                android:editable="true"
                android:textSize="15sp"
                android:textStyle="italic"
                android:singleLine="false"
                android:padding="20dp"
                android:clickable="false"
                android:textColorHint="#8dadc3"
                android:inputType="textMultiLine"
                android:shadowColor="#96b8d8"
                android:layout_marginTop="10dp"
                android:textColor="#0d4b75" />

            <Button
                android:layout_width="255dp"
                android:layout_height="58dp"
                android:id="@+id/button"
                android:background="@drawable/button"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn"
            android:layout_gravity="right|top"
            android:background="@drawable/mic"
            android:layout_margin="10dp" />

    </FrameLayout>

</FrameLayout>
